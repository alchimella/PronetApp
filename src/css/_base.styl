body
    background-color: $primary-dark1
    font-family: Roboto
    font-style: normal

.input
    height: 44px
    background: $primary-dark2
    border: 1px solid $primary-dark1
    box-sizing: border-box
    border-radius: 6px
    font-weight: normal
    font-size: 18px
    line-height: 20px
    color: $info-blue3
    padding-left: 20px

.submit-button
    height: 55px !important
    border-radius: 6px
    background-color: $next-blue2
    font-size: 18px
    font-weight: 500
    line-height: 21px
    color: $info-blue3

