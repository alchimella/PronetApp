h1
    font-size: 22px
    font-weight: 500
    line-height: 26px
    color: $info-blue1

h2
    font-weight: 500
    font-size: 20px
    line-height: 23px
    color: $info-blue2

h3
    font-weight: 500
    font-size: 14px
    line-height: 16px
    color: $info-blue2
    margin: 0