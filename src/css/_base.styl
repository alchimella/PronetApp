body
    font-family: 'Roboto' sans-serif
    font-style: normal
    background-color: $qr-bg-app

.input
    height: 44px
    background: $qr-bg-input
    border: 1px solid #CDD3D4
    box-sizing: border-box
    box-shadow: 0px 2px 8px #D5D5D5
    border-radius: 6px
    font-weight: normal
    font-size: 18px
    line-height: 20px
    color: $info-blue3
    padding-left: 20px

.pin-input
    opacity: 0
    position: absolute

.pin-label
    width: 12px
    height: 12px
    border: 1px solid $qr-bg-button-active
    background: $qr-bg-input
    border-radius: 6px
    box-shadow: 0px 2px 8px #D5D5D5
    font-weight: 500
    font-size: 24px
    line-height: 24px
    color: $qr-bg-button-active

.otp-input
    opacity: 0
    position: absolute

.otp-label
    width: 38px
    height: 44px
    border: 1px solid #CDD3D4
    background: $qr-bg-input
    border-radius: 6px
    box-shadow: 0px 2px 8px #D5D5D5
    font-weight: 500
    font-size: 24px
    line-height: 24px
    color: $qr-bg-button-active

.submit-button
    height: 55px !important
    border-radius: 6px
    background-color: $qr-bg-button-active
    box-shadow: 0px 2px 8px #D5D5D5;
    font-size: 18px
    font-weight: 500
    line-height: 21px
    color: $info-white

.call-button
    background-color: $qr-bg-button-active
    box-shadow: 0px 2px 8px #D5D5D5;

h1
    font-weight: 500
    font-size: 20px
    line-height: 23px
    color: $qr-text-title
    text-align: center

h2
    font-size: 22px
    font-weight: 500
    line-height: 26px
    color: $qr-text-subtitle
    margin-top: 0

h3
    font-weight: 500
    font-size: 16px
    line-height: 20px
    color: $qr-text-subtitle
    text-align: center

span
    font-weight: normal
    font-size: 10px
    line-height: 9px
    text-align: center
    position: absolute
    bottom: 10%

.q-tab--active .q-tab__indicator
    height: 4px
    background-color: $qr-bg-button-active
